<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mobiBooking.Forms.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            Spacing="20"
            VerticalOptions="CenterAndExpand">

            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalTextAlignment="Center"
                Text="Zaloguj się"/>

            <Editor x:Name="email"
                WidthRequest="200"
                Keyboard="Email"
                Placeholder="E-mail"
                Text="m.w@g.pl"/>
            <Editor x:Name="password"
                WidthRequest="200"
                Placeholder="Hasło"
                Text="123"/>

            <Button x:Name="SubmitButton"
                Clicked="SignIn_Button"
                HorizontalOptions="FillAndExpand"
                Text="Zaloguj"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>