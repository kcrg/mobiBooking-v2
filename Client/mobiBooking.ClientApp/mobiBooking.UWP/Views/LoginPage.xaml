<Page
    x:Class="mobiBooking.UWP.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Content>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Padding="50">

            <TextBlock Text="Zaloguj się" TextAlignment="Center" FontSize="24" FontWeight="Bold"/>

            <TextBox x:Name="email" Header="E-mail" extensions:TextBoxRegex.ValidationType="Email" Text="m.w@g.pl" Width="200"/>
            <PasswordBox x:Name="password" Header="Hasło" Password="123" Width="200"/>

            <Button Content="Zaloguj" HorizontalAlignment="Right" Click="SignIn_Button"/>
        </StackPanel>
    </Page.Content>
</Page>