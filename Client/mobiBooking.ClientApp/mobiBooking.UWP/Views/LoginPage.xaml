<Page
    x:Class="mobiBooking.UWP.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mobiBooking.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeMediumLowAcrylicWindowMediumBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Padding="50"
                    Background="{ThemeResource SystemControlChromeMediumLowAcrylicElementMediumBrush}">

            <TextBlock Text="Zaloguj się" TextAlignment="Center"/>
            
            <TextBox x:Name="email" Text="k.k@g.pl" PlaceholderText="e-mail" Width="200"/>
            <TextBox x:Name="password" Text="123" PlaceholderText="hasło" Width="200" InputScope="Password"/>
            
            <Button Content="Zaloguj" HorizontalAlignment="Right" Click="SignIn_Button"/>
        </StackPanel>
    </Grid>
</Page>