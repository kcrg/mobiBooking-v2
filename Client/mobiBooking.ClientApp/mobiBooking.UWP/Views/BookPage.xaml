<Page
    x:Class="mobiBooking.UWP.Views.BookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" NavigationCacheMode="Required">

    <Page.Content>
        <ScrollViewer>
            <StackPanel Spacing="12" MaxWidth="400">
                <TimePicker Header="Rezerwuje od*" HorizontalAlignment="Stretch"/>
                <DatePicker HorizontalAlignment="Stretch"/>

                <TimePicker Header="Rezerwuje do*" HorizontalAlignment="Stretch"/>
                <DatePicker HorizontalAlignment="Stretch"/>

                <TextBox Header="Pojemność sali"/>

                <TextBlock Text="Potrzebuje z wyposażeniem:" Margin="0,0,0,-7"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Flipchart"/>
                    <CheckBox Content="System nagłaśniający"/>
                </StackPanel>

                <ComboBox x:Name="room" Header="Wybierz salę*" PlaceholderText="Wybierz" HorizontalAlignment="Stretch">
                    <x:String>Placeholder sali</x:String>
                    <x:String>Sala nr.69</x:String>
                </ComboBox>

                <TextBox Header="Tytuł spotkania*"/>

                <ComboBox x:Name="status" Header="Status*" HorizontalAlignment="Stretch">
                    <x:String>Niedostępna</x:String>
                    <x:String>Zaakceptowana</x:String>
                    <x:String>Zakończona</x:String>
                    <x:String>Zakończona przed czasem</x:String>
                    <x:String>Dostępna</x:String>
                    <x:String>Brak możliwości edycji</x:String>
                </ComboBox>

                <CheckBox Content="Rezerwacja cykliczna"/>

                <TextBlock Text="Wybierz uczestników*"/>

                <ListBox x:Name="UsersList" MaxHeight="200" SelectionMode="Multiple" Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}">
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                </ListBox>
                <CheckBox x:Name="SelectAll" Content="Zaznacz wszystkich"  Click="SelectAll_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Page.Content>
</Page>