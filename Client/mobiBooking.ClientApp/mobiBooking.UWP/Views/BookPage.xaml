<Page
    x:Class="mobiBooking.UWP.Views.BookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Content>
        <ScrollViewer>
            <Grid MaxWidth="490">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="175"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Rezerwuje od:*" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <DatePicker Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="7"/>

                <TextBlock Text="Rezerwuje do:*" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <DatePicker Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="7"/>

                <TextBlock Text="Pojemność sali:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" Margin="7"/>

                <TextBlock Text="Potrzebuje z wyposażeniem:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Margin="7">
                    <CheckBox Content="Flipchart"/>
                    <CheckBox Content="System nagłaśniający"/>
                </StackPanel>

                <TextBlock Text="Wybierz salę:*" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox PlaceholderText="Wybierz" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" Margin="7"/>

                <TextBlock Text="Tytuł spotkania*" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Stretch" Margin="7"/>

                <TextBlock Text="Status:*" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox PlaceholderText="Zaakceptowana" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Stretch" Margin="7"/>

                <CheckBox Content="Rezerwacja cykliczna" Grid.Row="7" Grid.Column="1" Margin="7"/>

                <TextBlock Text="Wybierz uczestników*" Grid.Column="0" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <CheckBox x:Name="SelectAll" Content="Zaznacz wszystkich" Grid.Column="1" Grid.Row="8" VerticalAlignment="Top" Margin="7" Click="SelectAll_Click"/>
                <ListBox x:Name="UsersList" Grid.Column="1" Grid.Row="9" Margin="7" MaxHeight="200" VerticalAlignment="Top" SelectionMode="Multiple" Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}">
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                    <TextBlock Text="Arial" FontFamily="Arial"/>
                    <TextBlock Text="Courier New" FontFamily="Courier New"/>
                    <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
                </ListBox>
            </Grid>
        </ScrollViewer>
    </Page.Content>
</Page>