<Page
    x:Class="mobiBooking.UWP.Views.BookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Rezerwuje od:*" VerticalAlignment="Center"/>
            <DatePicker/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Rezerwuje do:*" VerticalAlignment="Center"/>
            <DatePicker/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Pojemność sali:" VerticalAlignment="Center"/>
            <TextBox Width="296"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Potrzebuje z wyposażeniem:" VerticalAlignment="Center"/>
            <CheckBox Content="Flipchart"/>
            <CheckBox Content="System nagłaśniający"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Wybierz salę:*" VerticalAlignment="Center"/>
            <ComboBox PlaceholderText="Wybierz" Width="296"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Tytuł spotkania*" VerticalAlignment="Center"/>
            <TextBox Width="296"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Status:*" VerticalAlignment="Center"/>
            <ComboBox PlaceholderText="Zaakceptowana" Width="296"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" Padding="12" Spacing="12">
            <CheckBox Content="Rezerwacja cykliczna"/>
        </StackPanel>

        <Grid Grid.Row="8" Padding="12">
            <ListBox Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}">
                <TextBlock Text="Arial" FontFamily="Arial"/>
                <TextBlock Text="Courier New" FontFamily="Courier New"/>
                <TextBlock Text="Times New Roman" FontFamily="Times New Roman"/>
            </ListBox>
        </Grid>
    </Grid>
</Page>
